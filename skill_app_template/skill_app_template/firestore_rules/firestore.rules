rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    match /categories/{id} {
      allow read: if true;
      allow write: if request.auth != null; // ajuste para admin
    }
    match /skills/{id} {
      allow read: if true;
      allow write: if request.auth != null; // ajuste para admin
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
